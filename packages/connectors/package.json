{
  "name": "@owox/connectors",
  "version": "0.0.0",
  "private": true,
  "description": "Marketing platform connectors with individual builds",
  "type": "module",
  "scripts": {
    "build": "vite build --config vite.config.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "analyze": "npm run build -- --mode analyze",
    "prepack": "npm run build",
    "lint": "eslint . --config ./eslint.config.js",
    "lint:fix": "eslint . --fix --config ./eslint.config.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json}\""
  },
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "chokidar": "^3.5.0",
    "fs-extra": "^11.0.0",
    "glob": "^10.0.0",
    "rimraf": "^5.0.0",
    "vite": "^5.0.0"
  }
}
